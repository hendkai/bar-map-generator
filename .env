# BAR Community Map Sharing Portal - Development Environment

# Application
APP_NAME=BAR Community Map Sharing Portal
APP_VERSION=1.0.0
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000

# CORS
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000,http://127.0.0.1:8000

# Database (PostgreSQL) - Using docker-compose defaults
DATABASE_URL=postgresql://bar_maps_user:bar_maps_password@localhost:5432/bar_maps_db
DATABASE_ECHO=false

# Authentication (JWT)
SECRET_KEY=dev-secret-key-change-in-production-12345678
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# File Storage
UPLOAD_DIR=uploads
MAX_UPLOAD_SIZE=104857600
ALLOWED_FILE_EXTENSIONS=.sd7

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
